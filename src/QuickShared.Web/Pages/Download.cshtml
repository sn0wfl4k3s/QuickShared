@page "{id:guid}"
@model QuickShared.Web.Pages.DownloadModel

@{
    ViewData["Title"] = "Download";
}

<div class="flex flex-1 items-center justify-center px-4 py-16">
    <div class="w-full max-w-lg rounded-xl border border-[#283039] bg-[#1a1f24] p-8 shadow-2xl">
        <div class="text-center">
            <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-[#283039]">
                <span class="material-symbols-outlined text-4xl text-[var(--primary-color)]">
                    draft
                </span>
            </div>
            <h2 class="mt-6 text-3xl font-bold tracking-tight text-white">Your file is ready!</h2>
            <p class="mt-2 text-base text-[#9dabb9]">Download the file below.</p>
        </div>
        <div class="mt-8 space-y-6">
            <div class="rounded-lg border border-[#283039] bg-[#111418] p-4">
                <div class="flex items-center justify-between">
                    <p class="text-lg font-semibold text-white">@Model.FileInfo.FileName</p>
                    <p class="text-sm text-[#9dabb9]">@Model.FileInfo.Size B</p>
                </div>
                @* <div class="mt-4">
                    <div class="flex items-center justify-between text-sm text-[#9dabb9]">
                        <span>Download Progress</span>
                        <span>100%</span>
                    </div>
                    <div class="mt-1 h-2 w-full rounded-full bg-[#3b4754]">
                        <div class="h-2 rounded-full bg-[var(--primary-color)]" style="width: 100%;"></div>
                    </div>
                </div> *@
            </div>
            <form method="post" asp-page-handler="Download">
                <input type="hidden" name="fileId" value="@Model.FileInfo.FileId" />
                <button type="submit" class="flex w-full items-center justify-center gap-2 rounded-lg bg-[var(--primary-color)] py-3.5 text-base font-bold text-white shadow-lg shadow-[var(--primary-color)]/20 transition-all hover:bg-opacity-90 active:scale-95">
                    <span class="material-symbols-outlined"> download </span>
                    <span class="truncate">Download File</span>
                </button>
            </form>
        </div>
    </div>
</div>